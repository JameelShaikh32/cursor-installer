#!/bin/bash
set -e

# Update desktop database
update-desktop-database /usr/share/applications

# Make scripts executable
chmod +x /usr/local/bin/cursor-installer
chmod +x /usr/local/bin/cursor-installer-gui

# Create symlinks for easier access
ln -sf /usr/local/bin/cursor-installer /usr/bin/cursor-installer
ln -sf /usr/local/bin/cursor-installer-gui /usr/bin/cursor-installer-gui

exit 0
